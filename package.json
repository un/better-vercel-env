{
  "name": "vercel-better-env",
  "version": "0.1.0",
  "description": "Local-first Vercel environment variable manager with a key-first matrix UI.",
  "bin": {
    "vercel-better-env": "bin/vercel-better-env.js"
  },
  "files": [
    "bin",
    "src/**/*",
    "!src/**/*.test.ts",
    "public",
    "next.config.ts",
    "postcss.config.mjs",
    "components.json",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.9.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/un/vercel-better-env.git"
  },
  "bugs": {
    "url": "https://github.com/un/vercel-better-env/issues"
  },
  "homepage": "https://github.com/un/vercel-better-env#readme",
  "keywords": [
    "vercel",
    "environment-variables",
    "cli",
    "nextjs",
    "local-first"
  ],
  "author": "Omar",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --hostname 127.0.0.1 --port 6969",
    "build": "next build",
    "start": "next start --hostname 127.0.0.1 --port 6969",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "verify": "npm run lint && npm run typecheck && npm run test -- --run",
    "prepublishOnly": "npm run verify"
  },
  "dependencies": {
    "@vercel/sdk": "^1.19.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.564.0",
    "next": "16.1.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
